---
import ArticlePreviewItem from "./ArticlePreviewItem.astro";

const { content } = Astro.props;
---

<section class="py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-xl px-4 md:px-8">
    <!-- Heading -->
    <div class="mb-10 md:mb-16">
      <h2 class="mb-4 text-center text-2xl font-bold md:mb-6 lg:text-3xl">
        Most Recent Posts
      </h2>

      <p class="mx-auto max-w-screen-md text-center text-gray-500 md:text-lg">
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sint
        necessitatibus molestias explicabo.
      </p>
    </div>
    <!-- /Heading -->
    <div
      class="grid gap-8 sm:grid-cols-2 sm:gap-12 lg:grid-cols-2 xl:grid-cols-2 xl:gap-16"
    >
      <!-- Article -->
      {
        content.articleListObjects.map((article, index) => {
          const {
            articleDate,
            articleTitle,
            articleDescription,
            articleLink,
            articleImgSrc,
            articleImgAlt,
          } = article;
          return (
            <ArticlePreviewItem
              articleDate={articleDate}
              articleTitle={articleTitle}
              articleDescription={articleDescription}
              articleLink={articleLink}
              articleImgSrc={articleImgSrc}
              articleImgAlt={articleImgAlt}
            />
          );
        })
      }
      <!-- /Article -->
    </div>
  </div>
</section>
