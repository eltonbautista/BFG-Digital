---
import Button, { ButtonTwo } from "../Button";
import AstroButton from "./AstroButton.astro";
const { content } = Astro.props;
---

<section
  class="relative py-12 sm:py-16 lg:pt-20 xl:pb-0 overflow-x-hidden bg-neutral"
>
  <div
    class="shrink-0 from-white/40 absolute left-1/2 h-96 w-96 -translate-x-1/2 rounded-full border border-gray-500 bg-gradient-to-br"
  >
  </div>

  <div class="relative mx-auto max-w-screen-xl px-4 md:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h1
        class="mt-5 text-3xl font-medium leading-snug sm:text-5xl sm:leading-snug lg:text-6xl lg:leading-snug"
      >
        <span class="text-sm uppercase">{content.heroHeadingDescription}</span>
        <span class="font-semibold block uppercase">{content.heroHeading}</span>
      </h1>
      <h2
        class="mx-auto mt-4 max-w-3xl text-xl md:text-2xl lg:text-3xl leading-7"
      >
        {content.heroSubHeading}
      </h2>
      <div class="mt-10">
        <AstroButton
          title={content.descriptionButton}
          link="/"
          bgColor="bg-primary"
          textColor="text-neutral-content"
        />
        <AstroButton
          title={content.pricingButton}
          link="/"
          bgColor="bg-primary"
          textColor="text-neutral-content"
        />
        <AstroButton
          title={content.fAQButton}
          link="/"
          bgColor="bg-primary"
          textColor="text-neutral-content"
        />
      </div>
    </div>
  </div>

  <div
    class="mt-16 mb-16 flex flex-col items-center justify-center divide-y divide-gray-500 border border-gray-600 bg-accent shadow-lg md:flex-row md:divide-x md:divide-y-0 md:mt-32 text-xs md:text-sm"
  >
    <div class="flex max-w-xs items-center space-x-2 px-4 py-4">
      <!-- prettier-ignore -->
      <svg
        class="h-12 w-12"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 14"
        ><path
          stroke="white"
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M7.00001 0.769043C6.26017 0.769043 5.52453 0.864057 4.83158 1.06063"
        ></path><path
