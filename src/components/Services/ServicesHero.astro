  <div class="w-full bg-secondary-content relative">
    <div
      class="grid justify-items-center relative mx-auto max-w-screen-xl px-4 md:px-6 lg:px-8"
    >
      <p class="text-neutral-focus text-center max-w-4xl py-4 md:py-8">
        {content.heroDescription}
      </p>
    </div>
  </div>
</section>
