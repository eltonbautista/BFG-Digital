---
import Button, { ButtonTwo } from "../components/Button";
import WebsiteLayout from "../components/WebsiteLayout";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Coming Soon">
  <WebsiteLayout client:load>
    <div class="relative bg-neutral">
      <div class="relative py-12 sm:py-16 lg:py-20 lg:pb-36">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div
            class="mx-auto grid max-w-4xl grid-cols-1 gap-y-12 lg:max-w-full lg:grid-cols-2 lg:items-center lg:gap-x-8"
          >
            <div>
              <div class="text-center lg:text-left">
                <h1
                  class="max-w-md text-4xl font-bold leading-snug sm:text-5xl sm:leading-snug"
                >
                  Coming Soon
                </h1>
                <p class="mt-2 text-lg sm:mt-8">
                  Hi! We're currently in the process of rolling out more of our
                  pages, feel free to subscribe to our newsletter down below to
                  receive updates! <br /> Thank you for keeping us on your mind.
                </p>
                <div
                  class="mt-8 flex flex-col items-center justify-center sm:flex-row sm:space-x-4 lg:justify-start"
                >
                  <Button link="/" type="button" title="Homepage" />
                  <ButtonTwo link="/calgary-web-design-company/web-development"
                    >Learn about our services</ButtonTwo
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </WebsiteLayout>
</Layout>
